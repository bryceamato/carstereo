<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amato19.carstereo.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#a9a5a5">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:weightSum="1">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="POWER"
                    android:id="@+id/powerButton"
                    android:layout_weight="0.09"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UP"
                    android:id="@+id/upButton"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="250dp"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREV"
                    android:id="@+id/prevButton"
                    android:layout_gravity="center"
                    android:layout_marginLeft="230dp"
                    android:textSize="25sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAUSE"
                    android:id="@+id/pauseButton"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAY"
                    android:id="@+id/playButton"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT"
                    android:id="@+id/nextButton"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:weightSum="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EJECT"
                    android:id="@+id/ejectButton"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="270dp"
                    android:textSize="25sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOWN"
                    android:id="@+id/downButton"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:text="CD Deck"
                    android:id="@+id/cdTextView"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="100dp"
                    android:textSize="40sp" />

            </LinearLayout>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:background="#a9a5a5"
        android:weightSum="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="This is the current station"
                    android:id="@+id/stationView"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:textColor="#000000"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="1">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="AM/FM"
                    android:id="@+id/amfmButton"
                    android:layout_weight="0.12"
                    android:checked="false"
                    android:textSize="48sp"
                    android:textOff="FM"
                    android:textOn="AM" />

                <SeekBar
                    android:layout_width="618dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tuner"
                    android:layout_marginLeft="100dp"
                    android:max="100" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/preset1Button"
                    android:textColor="#FFFFFFFF"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/preset2Button"
                    android:layout_marginLeft="75dp"
                    android:textSize="40sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/preset3Button"
                    android:layout_marginLeft="75dp"
                    android:textSize="40sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/preset4Button"
                    android:layout_marginLeft="75dp"
                    android:textSize="40sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/preset5Button"
                    android:layout_marginLeft="75dp"
                    android:textSize="40sp"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/preset6Button"
                    android:layout_marginLeft="50dp"
                    android:textSize="40sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>
        </TableLayout>
    </LinearLayout>
</TableLayout>
